{
  "manifest_version": 3,
  "name": "TruthLens - AI Fact Checker",
  "version": "1.0.0",
  "description": "AI-powered fact-checking extension with WhatsApp-style chat interface",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",        
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TruthLens - Check Facts",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
